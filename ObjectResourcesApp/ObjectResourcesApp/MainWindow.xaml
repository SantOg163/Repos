<Window x:Class="ObjectResourcesApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ObjectResourcesApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Orientation="Horizontal">

        <Button Name="Ok" Content="Ok" FontSize="20" Margin="25" Width="360" Height="300" Background="{StaticResource myBrush}" Click="Ok_Click"/>
        <Button x:Name="Cancel" Content="Cancel" FontSize="20" Width="360" Height="300" Background="{DynamicResource myBrush}" Click="Cancel_Click"/>
    </StackPanel>
</Window>
